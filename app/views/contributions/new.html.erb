<%= render "layouts/errors", :object => @contribution %>

<h1>New Contribution</h1>

<%= form_for [@story, @contribution] do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user %><br><br>
  <%= f.label :sentence %><br>
  <%= f.text_area :sentence, size: "120x20" %><br>

  <%= f.hidden_field :image_urls_string, value: "#{@randomImage1},#{@randomImage2}" %><br>

  <%= render "layouts/clown_logic", :image => @randomImage1, :supplied_class => 'animated wobble' %>
  <%= render "layouts/clown_logic", :image => @randomImage2, :supplied_class => 'animated wobble' %>
  <br>
  <%= f.submit %>
<% end %>

<% content_for(:footer) do %>
<%= link_to 'Back', story_path(@story) %> |
<%= link_to 'Home', stories_path %>
<% end %>
