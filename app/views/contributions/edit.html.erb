<%= render "layouts/errors", :object => @contribution %>

<h1>Edit Contribution</h1>

<%= form_for [@story, @contribution] do |f| %>
  <%= f.label :user %>
  <%= f.text_field :user %><br><br>
  <%= f.label :sentence %><br>
  <%= f.text_area :sentence, size: "120x20" %><br>

  <%= image_tag(@contribution.image_urls[0], height: '64', class: 'animated bounce') %>
  <%= image_tag(@contribution.image_urls[1], height: '64', class: 'animated bounce') %>
  <%= f.submit %>
<% end %>

<% content_for(:footer) do %>
<%= link_to 'Back', story_path(@story) %> |
<%= link_to 'Home', stories_path %>
<% end %>
