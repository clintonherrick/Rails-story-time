<%= render "layouts/errors", :object => @contribution %>

<h1>Edit Contribution</h1>

<% @contribution.images.each do |image| %>
  <%= image_tag(image.src, :class => image.animation, :height => image.size) %>
<% end %>

<%= form_for [@story, @contribution] do |f| %>
  <%= f.label :sentence %><br>
  <%= f.text_area :sentence, size: "120x20" %><br><br>
  <%= f.label :user %>
  <%= f.text_field :user %>

  <%= f.submit %>
<% end %>

<% content_for(:footer) do %>
<%= link_to 'Back', story_path(@story) %> |
<%= link_to 'Home', stories_path %>
<% end %>
