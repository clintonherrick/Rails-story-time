<h1>Stories</h1>

<ul>
  <% @stories.each do |story| %>
    <li>
      <h2>
        <%= link_to story.title, story_path(story) %>,
        <small>
          <i>
            <%= story.created_at.strftime("created on %m/%d/%Y") %>
            <%= story.created_at.strftime(" at %I:%M%p") %>
          </i>
        </small>
      </h2>

    </li>
  <% end %>

<h3><%= link_to "Add a new story", new_story_path %></h3>

</ul>

<hr>
<% @images.each do |image| %>
  <%= image_tag(image.src, :class => 'animated zoomIn', :height => image.size) %>
<% end %>
